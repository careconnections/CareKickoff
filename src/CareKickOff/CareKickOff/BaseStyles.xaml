<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CareKickOff.BaseStyles">

    <Color x:Key="PrimaryColor">#82b026</Color>
    <Color x:Key="WhiteColor">#FFFFFF</Color>    
    <Color x:Key="PrimaryTitleColor">#FFFFFF</Color>


    <!-- Title bar color set-->
    <Style ApplyToDerivedTypes="true" TargetType="NavigationPage">
           <Setter Property="BarBackgroundColor" Value="{StaticResource Key=PrimaryColor}"/>
           <Setter Property="BarTextColor" Value="{StaticResource Key=PrimaryTitleColor}"/>
    </Style>
</ResourceDictionary>
